<div class="container">
    <h1>Eat the Burger</h1>



    <div class="col-md-6">


        <div class="panel panel-default ">
            <div class="panel-heading">
                <h3 class="panel-title">Add Burger</h3>
            </div>

            <div class="panel-body">
                {{#each result}}
                    {{#if this.devoured}}

                        <ul>
                            <div class="list">
                                <li>{{id}} - {{burger_name}}</li>
                                <form action="/{{this.id}}?_method=PUT" method="POST">
                                    <button class="btn btn-default" id="{{id}}" type="submit">Devour</button>
                                </form>
                            </div>
                        </ul>

                    {{/if}}

                {{/each}}


                <form action="/add?_method=PUT" method="POST">
                    <textarea type="text" name="burger_name"> </textarea> <br>
                    <button type="submit" class="btn btn-default">Submit</button>

                </form>
            </div>

        </div>

    </div>


    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Devour Burger</h3>
            </div>

            <div class="panel-body">
                {{#each result}}
                    {{#unless this.devoured}}

                    <ul>
                        <div class="list">
                            <li>{{id}} - {{burger_name}}</li> <button class="btn btn-default" id="{{id}}">Devour</button>
                        </div>
                    </ul>

                    {{/unless}}

                {{/each}}
            </div>

        </div>

    </div>



</div>
